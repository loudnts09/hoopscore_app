<resources>
    <style name="TitleLabel">
        <item name="android:textColor">@color/clr_text_title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreText">
        <item name="android:textColor">@color/clr_score</item>
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_bg</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/clr_btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
    </style>
</resources>